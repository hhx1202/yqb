.detail {
  box-sizing: border-box;
  width: 100%;
  padding:0 30rpx;
  background-color: #ffffff;
  margin-top:20rpx;
}

.detail .item{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom:1px solid #ECECEC;
  clear:both;
}

.detail .item:last-child{
  border: 1rpx solid #FFFFFF;
}

.detail .item .txt{
  float:left;
  padding-left:10rpx;
  color:#202020;
}
.detail .item .val{
  float:right;
  text-align: right;
  padding-right:10rpx;
  color:#8A8A8A;
}

.btn_use{
  margin-top: 100rpx;
  width:300px;
  height:45px;
  display: block;
  background-color: #005BAC;
  color: white;
  border-width: 0px;
}